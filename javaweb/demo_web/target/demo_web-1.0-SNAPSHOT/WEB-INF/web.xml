<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--contex-parm是上下文参数（属于整个web工程）-->
    <context-param>
        <param-name>username</param-name>
        <param-value>contex</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>root</param-value>
    </context-param>


    <!--servlet标签给tomcat配置servlet程序-->
    <servlet>
        <!--servlet-name标签给servlet程序起一个别名（一般是类名）-->
        <servlet-name>HelloServlet</servlet-name>
        <!--servlet-class是servlet程序的全类名-->
        <servlet-class>com.example.demo_web.HelloServlet</servlet-class>
    </servlet>

    <!--servlet-mapping给servlet程序配置访问地址-->
    <servlet-mapping>
        <!--servlet-name标签告诉服务器，当前配置的地址给哪个servlet程序用-->
        <servlet-name>HelloServlet</servlet-name>
        <!--url-pattern配置访问地址 <br/>
          /在服务器解析时，表示地址为:http://ip:port/工程路径   <br/>
          /hello表示地址为：http://ip:port/工程路径/hello    <br/>
        -->
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HelloServlet2</servlet-name>
        <servlet-class>com.example.demo_web.HelloServlet2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContexServlet</servlet-name>
        <servlet-class>com.example.demo_web.ContexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet2</servlet-name>
        <url-pattern>/hello2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContexServlet</servlet-name>
        <url-pattern>/contexservlet</url-pattern>
    </servlet-mapping>

</web-app>